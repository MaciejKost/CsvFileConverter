<Window x:Class="CsvFileConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsvFileConverter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="434" VerticalAlignment="Bottom">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="120*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="367*"/>
        </Grid.RowDefinitions>
        <Button Content="Wczytaj plik" x:Name="openFileBtn" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="110" Height="29" Click="openFile_Click" Margin="5,0,0,0"/>
        <Button Content="Posortuj po nazwie" x:Name="sortByNameBtn" IsEnabled="False" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Width="110" Height="29" Click="sortByName_Click" Margin="5,0,0,0"/>
        <Button Content="Posortuj po cenie" x:Name="sortByPriceBtn" IsEnabled="False" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Width="110" Height="29" Click="sortByPrice_Click"/>
        <Button Content="Szukaj" x:Name="searchByDescBtn" IsEnabled="False"  HorizontalAlignment="Left" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" Width="110" Height="29" Click="searchByDesc_Click" Margin="5,0,0,0" />
        <TextBox Text="" x:Name="searchTextBox" TextWrapping="Wrap" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Width="290" Margin="5,0,0,0"/>
        
        <ListView Margin="10,10,10,10" Name="lvCommodity" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">
